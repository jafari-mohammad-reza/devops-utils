// stack conf: 
mongo3:
    image: mongo:3.6.8
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: root
    ports:
      - "27017:27017"
    volumes:
      - /opt/db/mongo-data:/data/db
    command: mongod --replSet rs0 --bind_ip_all --auth
    networks:
      - siwan
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      resources:
        limits:
          memory: 8gb
          cpus: '6'
        reservations:
          memory: 4gb
          cpus: '4'

// commands 
 mongo -u root -p root --authenticationDatabase admin
rs.initiate({_id: 'rs0', members: [{_id: 0, host: 'localhost:27017'}]})
